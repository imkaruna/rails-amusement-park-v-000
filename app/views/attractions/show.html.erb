<h1>Attraction Detail</h1>
<p>
  <strong>Name: </strong> <%= @attraction.name %>
</p>
<p>
  <strong>Tickets: </strong><%= @attraction.tickets %>
</p>
<p>
  <strong>Nausea Rating: </strong><%= @attraction.nausea_rating %>
</p>
<p>
  <strong>Height Requirement: </strong><%= @attraction.min_height %>
</p>
<p>
  <strong>Happiness Rating: </strong><%= @attraction.happiness_rating %>
</p>
<% if current_user.is_admin? %>
<%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
<% end %>
<br><br>

<%= form_tag("/rides/new", method: "post") do %>
  <%= hidden_field_tag(:attraction_id, "#{@attraction.id}") %>
  <%= hidden_field_tag(:user_id, "#{current_user.id}") %>
  <%= submit_tag("Go on this ride") %>
<% end %>
<br><br>
<%= link_to 'See attractions', attractions_path %>
